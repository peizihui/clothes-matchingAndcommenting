<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.clothes.dao.ClothDao">
    <insert id="insertCloth">
        INSERT INTO t_clothing (c_cloth_icon, c_desc, n_createTime)
        VALUES (#{clothIcon}, #{desc}, #{createTime})
    </insert>
    <delete id="deleteCloth">
        DELETE FROM t_clothing WHERE n_id = #{id}
    </delete>
    <update id="updateCloth">
        UPDATE t_clothing SET
          c_cloth_icon = #{clothIcon},c_desc = #{desc}, n_createTime = #{createTime}
          WHERE n_id = #{id}
    </update>
    <select id="queryCloth" resultType="Clothes">
        SELECT *
        FROM t_clothing
        WHERE n_id = #{id}
    </select>
    <select id="queryForPage" resultType="User">
        SELECT *
        FROM t_clothing
        limit #{offset}, #{limit}
    </select>
</mapper>